---
import BaseLayout from "../layouts/BaseLayout.astro";
import PricingTable from "../components/landing/PricingTable.astro";
---

<BaseLayout>
  <section class="pt-24 bg-white">
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
      <div class="max-w-3xl mx-auto text-center">
        <p
          class="text-sm leading-normal font-bold uppercase text-accent-600 mb-6"
        >
          Pricing Plans
        </p>
        <h1 class="text-4xl font-bold text-base-900 lg:text-5xl mb-6">
          Choose the Perfect Plan
        </h1>
        <p class="text-xl text-base-600">
          From small websites to enterprise agencies, we have a plan that scales
          with your business.
        </p>
      </div>
    </div>
  </section>

  <PricingTable />

  <!-- FAQ Redirect Section -->
  <section class="py-16 bg-base-50">
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-base-900 mb-4">Have Questions?</h2>
        <p class="text-lg text-base-600 mb-8">
          Get answers to common questions about FluxyForm pricing, features, and
          setup in our comprehensive FAQ section.
        </p>

        <a
          href="/faq"
          class="inline-flex items-center justify-center transition-all duration-200 focus:ring-2 focus:outline-none text-white bg-accent-600 hover:bg-accent-700 focus:ring-accent-500/50 h-9 px-4 py-2 text-sm font-medium rounded-md w-fit max-w-xs mx-auto"
        >
          View All FAQs
          <svg
            class="w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-16 bg-accent-600">
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          Ready to get started?
        </h2>
        <p class="text-xl text-accent-100 mb-8">
          Join thousands of WordPress professionals using FluxyForm to manage
          their contact forms efficiently.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://wordpress.org/plugins/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 text-lg font-medium text-accent-600 bg-white border border-transparent rounded-lg hover:bg-accent-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-colors"
          >
            Start Free Trial
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>

          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium text-white bg-accent-700 border border-accent-500 rounded-lg hover:bg-accent-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-colors"
          >
            Contact Sales
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              ></path>
            </svg>
          </a>
        </div>

        <p class="text-accent-200 text-sm mt-4">
          Free trial available • No credit card required • Cancel anytime
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
